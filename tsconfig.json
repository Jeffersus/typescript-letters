{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "es2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}